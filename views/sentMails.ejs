<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GiMail | <%= user.username%></title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <style>
    .container{
      position: relative;
      overflow: hidden;
    }
    a{
      text-decoration: none;
    }
    .ri-delete-bin-7-fill{
      color: red;
    }
    .mails{
      overflow-y: scroll;
      height: 75vh;
    }
    .mails::-webkit-scrollbar{
      width: 8px;
    }
    .mails::-webkit-scrollbar-thumb{
      background: #aaa;
      border-radius: 50px;
    }
    .compose-mail{
      position: absolute;
      bottom: 0;
      right: 0;
      width: 30vw;
      height: 64vh;
      background: rgb(240, 240, 240);
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      transform: translateY(100%);
      transition: all cubic-bezier(0.19, 1, 0.22, 1) 1s;
    }
    .mail-text{
      resize: none;
      width: 100%;
      height: 250px;
      border: none;
      padding: 5px;
      outline: none;
    }
    .compose-mail-navigationbar{
      width: 100%;
      display: flex;
      justify-content: end;
      font-size: 20px;
    }
    .compose-mail-navigationbar:hover{
      cursor: pointer;
    }
  </style>
  <body>
    <div class="container mt-4">
        <div id="buttons" class="d-flex justify-content-between mt-4">
          <a class="me-auto" href="/profile">
            <div class="btn btn-info ms-3 d-flex align-items-center" style="gap: 5px;"><i class="ri-inbox-line"></i>Inbox</div>
          </a>
          <a href="/logout"><div class="btn btn-danger">
            Log Out
          </div></a>
        </div>
        <hr>
        <div class="mails">
            <% user.sentMails.forEach(function(userSentMail){ %>
                <div class="mail border p-3 rounded mb-2">
                  <h5>To: <span class="lead fs-5" ><%= userSentMail.email %></span></h5>
                  <h5><%= userSentMail.subject %></h5>
                  <p><%= userSentMail.mailText %></p>
                  <div class="mailbtn d-flex align-items-center justify-content-between">
                    <a href="">Read more</a>
                    <a href=""><i class="ri-delete-bin-7-fill mx-2 fs-4"></i></a>
                  </div>
                </div>      
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

    <script>
      document.querySelector(".compose")
      .addEventListener("click",function(elem){
        document.querySelector(".compose-mail").style.transform = "translateY(0)";
      });

      document.querySelector("#close")
      .addEventListener("click",function(elem){
        document.querySelector(".compose-mail").style.transform = "translateY(100%)";
      });
    </script>
  </body>
</html>